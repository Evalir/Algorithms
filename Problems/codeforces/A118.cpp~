#include <iostream>
#include <string>

using namespace std;

bool is_vowel(char c) {
  c = tolower(c);
  return c == 'a' || c == 'o' || c == 'y' || c == 'e' || c == 'u' || c == 'i';
}

int main() {
  string s;
  
  cin >> s;
  s.insert(0, 1 ,'.');
  for (int i = 0; i < s.size(); i++) {

    if (is_vowel(s[i])) {
      s.erase(i, 1);
      i--;
    }
  }

  cout << s << endl;
  
  for (int i = 1; i < s.size(); i++) {
    s.insert(i, '.');
  }

  

}
