#include <iostream>
#include <string>
#include <vector>
#include <sstream>

int main() {

  int nOfWords;
  std::vector<std::string>wordArr;
  std::string word = "";
  std::cin >> nOfWords;

  for(int i = 0; i <= nOfWords; i++) {
    std::cin >> word;
    int between = word.length() - 2;
    std::string finalWord;
    finalWord +=  std::string(word[0]) + std::to_string(between) + std::string(word[word.length() - 1]);
    wordArr.push_back(finalWord);
  }

  for(int i : wordArr) {
    std::cout << i << std::endl;
  }

}
